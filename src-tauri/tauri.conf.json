{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "领尚造型会员管理",
  "version": "0.1.0",
  "identifier": "com.tauri-app.tauri-app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "领尚造型会员管理",
        "width": 1000,
        "height": 750,
        "minWidth": 1000,
        "minHeight": 750
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
